# -*- mode: sh -*-

# Notice that it's worth setting these even if they don't exist on the
# machine they're being set on, as they could still come in handy when
# constructing scp/rsync command-lines etc.

# Favour this over rpm --eval '%{_topdir}' in the interests of
# efficiency:
if [ -d /usr/src/packages ]; then
  _topdir=/usr/src/packages
else
  _topdir=/usr/src/redhat
fi

# Ditto here:
#docdir=$( rpm --eval '%{_defaultdocdir}' )
if [ -d /usr/share/doc/packages ]; then
  RPMDOCDIR=/usr/share/doc/packages
  export RPMDOCDIR
elif [ -d /usr/share/doc ]; then
  RPMDOCDIR=/usr/share/doc
  export RPMDOCDIR
fi

RP=$_topdir/RPMS
I3=$RP/i386
I4=$RP/i486
I5=$RP/i586
I6=$RP/i686
NA=$RP/noarch
SR=$_topdir/SRPMS
SP=$_topdir/SPECS
SO=$_topdir/SOURCES
BU=$_topdir/BUILD
